@model App.ViewModels.Brand.Delete.Brand
@{
    Layout ="Layout";
    var brand = Model;
}

<div class="container">
    <div class="row">
        <div class="col">
            <form method="post" asp-action="Delete" asp-route-ref="@(System.Net.WebUtility.UrlEncode(ViewData["ref"].ToString()))">
                <div class="row">
                    <div class="form-group col-md-6 col-lg-4">
                        <label for="brand_id">Id</label>
                        <input readonly id="brand_id" name="Id" class="form-control form-control-sm" value="@brand.Id" type="number" required />
                    </div>
                    <div class="form-group col-md-6 col-lg-4">
                        <label for="brand_name">Name</label>
                        <input readonly id="brand_name" name="Name" class="form-control form-control-sm" value="@brand.Name" required maxlength="50" />
                    </div>
                    <div class="col-12">
                        <a class="btn btn-sm btn-secondary" href="@ViewData["ref"]">Cancel</a>
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    initPage(true)
</script>